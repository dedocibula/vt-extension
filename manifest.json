{
	"name": "VT by DedoCibula",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Never miss your VT course registration ever again...",
	"browser_action": {
		"default_icon": "favicon.png",
		"default_title": "VT Extension"
	},
	"background": {
		"scripts": [ "js/libs/jquery.min.js", "js/background.js" ]
	},
	"permissions": [ "https://banweb.banner.vt.edu/*", "https://www.registrar.vt.edu/*", "notifications", "webRequest", "webRequestBlocking" ],
	"icons": {
		"48": "favicon.png"
	},
	"content_scripts": [
		{
			"matches": [ "https://banweb.banner.vt.edu/ssb/prod/bwskfreg.P_AddDropCrse*" ],
			"js": [ "js/libs/jquery.min.js", "js/register.js" ]
		}
	],
	"web_accessible_resources": ["favicon.png"]
}
